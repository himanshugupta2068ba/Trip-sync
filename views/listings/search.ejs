<%- layout('layouts/boilerplates.ejs') -%>
<style>
    .search-input {
  border-radius: 25px;
  padding: 0.6rem 1rem;
}

.btn-search {
  background-color: #ff385c;
  color: white;
  border-radius: 25px;
  padding: 0.5rem 1rem;
  transition: all 0.3s ease;
}

.btn-search:hover {
  background-color: #e03150;
  color: #fff;
}

</style>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
      <i class="fa-solid fa-magnifying-glass me-2"></i>
      Search Results for "<%= query %>"
    </h2>
    <a href="/listings" class="btn btn-outline-dark btn-sm">Back to All</a>
  </div>

  <% if (searchResults.length === 0) { %>
    <div class="text-center mt-5">
      <i class="fa-regular fa-face-frown fa-3x mb-3"></i>
      <h4>No listings found for "<%= query %>".</h4>
      <p class="text-muted">Try using different keywords or filters.</p>
    </div>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% searchResults.forEach(listing => { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
            <div class="card listing-card h-100 shadow-sm border-0">
              <img 
                src="<%= listing.images.url || listing.images %>" 
                class="card-img-top" 
                alt="<%= listing.title %>"
                style="height: 18rem; object-fit: cover;"
              >
              <div class="card-body">
                <h5 class="card-title mb-1"><%= listing.title %></h5>
                <p class="text-muted mb-1">
                  <i class="fa-solid fa-location-dot me-1"></i>
                  <%= listing.country %>
                </p>
                <p class="fw-bold mb-0">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>
