<% layout("layouts/boilerplates.ejs") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
    </div>

   <div class="card col-8 offset-2 mt-2 show-card listing-card ">
  <img src="<%= listing.images %>" class="card-img-top show-img" alt="<%= listing.title %>"">

  <div class="card-body">
       Owned By <i><%= listing.owner.username %></i><br>
    <b class="card-title"><%= listing.title %>"</b>
    <p class="card-text">
        <%= listing.description %><br>
        <%= listing.location %><br>
       &#8377; <%= listing.price.toLocaleString("en-IN") %>/night<br>
        <%= listing.country %>
    </p><br>
    <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
    <div class="show-btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn-dark btn-sm edit-btn offset-2">Delete</button>
    </form>
  </div> 
   <% } %>
  <hr></hr>
  <%if(currentUser){%>
  <div class="col-8 mb-3">
    <h4>Reviews</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div>
        <label for="review" class="form-label">Rating</label>
        <input type="range"  name="review[rating]" min="1" max="5" class="form-range">
      </div>
       <label for="review">Comment</label>
        <textarea id="review" name="review[comment]" rows="4" cols="30" class="form-control"
        required></textarea>
        <div class="invalid-feedback">Comment is required</div>
        <div class="valid-feedback">Comment look good</div>
       <button type="submit" class="btn btn-outline-dark mt-2">Submit Review</button>
    </form>
  </hr>
  <% } %>
  <p><b>All Reviews</b></p>
  <div class="row ">
    <% listing.reviews.forEach(review => { %>
        <div class="card col-5 ms-3 mb-2">
          <div class="card-body">
        <h5 class="card-title"><%=review.author.username  %></h5>
         <p class="card-text"><%= review.comment %></p>
          <p class="card-text mb-1"><%= review.rating %> stars</p>
      </div>
          <% if(currentUser && currentUser._id.equals(review.author._id)){ %>
      <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
        <button class="btn btn-sm btn-dark mb-2">Delete</button>
      </form>
      <% } %>
    </div>
    <% }) %>
  </div>
</div>
</div>
</div>
</div>