<% layout("layouts/boilerplates.ejs") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
    </div>

   <div class="card col-8 offset-2 mt-2 show-card listing-card ">
  <img src="<%= listing.images.url || listing.images %>" class="card-img-top show-img" alt="<%= listing.title %>"">

  <div class="card-body">
       Owned By <i><%= listing.owner.username %></i><br>
    <b class="card-title"><%= listing.title %>"</b>
    <p class="card-text">
        <%= listing.description %><br>
        <%= listing.location %><br>
       &#8377; <%= listing.price.toLocaleString("en-IN") %>/night<br>
        <%= listing.country %>
    </p><br>
    <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
    <div class="show-btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn-dark btn-sm edit-btn offset-2">Delete</button>
    </form>
  </div> 
   <% } %>
  <hr></hr>
  <%if(currentUser){%>
    <h4>Leave an Reviews</h4><br>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <!-- <div>
        <label for="review" class="form-label">Rating</label>
        <input type="range"  name="review[rating]" min="1" max="5" class="form-range">
      </div> -->
<div class="col-8 mb-3">
    <label for="review" class="form-label">Rating</label>
<fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>
<div class="col-8 mb-3">
       <label for="review" class="form-label">Comment</label>
        <textarea id="review" name="review[comment]" rows="4" cols="30" class="form-control"
        required></textarea>
        <div class="invalid-feedback">Comment is required</div>
        <div class="valid-feedback">Comment look good</div>
       <button type="submit" class="btn btn-outline-dark mt-2">Submit Review</button>
       </div>
    </form>
  </hr>
  <% } %>
  <p><b>All Reviews</b></p>
  <div class="row ">
    <% listing.reviews.forEach(review => { %>
        <div class="card col-5 ms-3 mb-2">
          <div class="card-body">
        <h5 class="card-title"><%=review.author.username  %></h5>
               <p class="starability-result card-text" data-rating="<%= review.rating %>">
  </p>
         <p class="card-text"><%= review.comment %></p>    
    
      </div>
          <% if(currentUser && currentUser._id.equals(review.author._id)){ %>
      <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
        <button class="btn btn-sm btn-dark mb-2">Delete</button>
      </form>
      <% } %>
    </div>
    <% }) %>
  </div>
</div>
</div>
</div>
</div>