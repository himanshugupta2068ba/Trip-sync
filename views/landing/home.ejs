<% layout("layouts/boilerplates.ejs") -%>
<html>
  <head>
    <title>TripSync - Home</title>
    <link rel="stylesheet" href="/css/home.css">
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
  </head>
  <body>
    
<div class="home-hero vh-100 ml-0 mr-0">
    <div class="home-hero-content">
        <h1>Welcome to TripSync</h1>
        <h3>Your Gateway to Unforgettable Travel Experiences</h3>
        <a href="/listings" class="btn btn-danger btn-lg">Explore Places</a>
    </div>
    
<!-- Why Choose TripSync Section -->
<section class="py-5  text-center">
  <div class="container">
    <h2 class="fw-bold  mb-3">Why Choose <span style="color: rgb(201, 211, 229);">TripSync</span>?</h2>
    <p class="text-danger mb-5">Experience travel booking redefined with features that put you first</p>

    <div class="row g-4">
      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm p-4 h-100">
          <div class="icon mb-3 text-danger fs-1"><i class="fa-solid fa-shield-halved"></i></div>
          <h5 class="fw-bold">Secure Booking</h5>
          <p class="text-muted mb-0">Your safety is our priority with verified properties and secure payment processing.</p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm p-4 h-100">
          <div class="icon mb-3 text-danger fs-1"><i class="fa-solid fa-credit-card"></i></div>
          <h5 class="fw-bold">Best Price Guarantee</h5>
          <p class="text-muted mb-0">Find the best deals with our price-match promise and exclusive member discounts.</p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm p-4 h-100">
          <div class="icon mb-3 text-danger fs-1"><i class="fa-solid fa-headset"></i></div>
          <h5 class="fw-bold">24/7 Support</h5>
          <p class="text-muted mb-0">Our dedicated team is always ready to assist you, anytime, anywhere.</p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm p-4 h-100">
          <div class="icon mb-3 text-danger fs-1"><i class="fa-solid fa-award"></i></div>
          <h5 class="fw-bold">Quality Verified</h5>
          <p class="text-muted mb-0">Every property is personally reviewed and verified by our quality team.</p>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
</body>
</html>

